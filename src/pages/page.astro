    </div>


    <div class="m-10">
      <button id ="scaleElement" class="bg-blue-400 p-5 rounded-lg  hover:bg-blue-950 hover:text-white hover:scale-110 transition-transform -translate-x-full duration-1000">Button A</button>
    </div>
        
    </div>
  
  </div>

  <script>
    // Wait for the DOM to load
    window.addEventListener('load', function() {
      const scaleElement = document.getElementById('scaleElement');
      
      // Ensure the element exists
      if (scaleElement) {
        // Apply translate class and trigger transition
        scaleElement.classList.add('translate-x-0'); // Apply translation on load
      }
    });
  </script>
