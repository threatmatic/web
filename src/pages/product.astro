window.addEventListener('load', () => {
  const video = document.getElementById('heroVideo');
  const overlay = document.getElementById('videoOverlayImage');

  if (video) {
    // Avoid duplicating <source> on repeated loads
    if (video.querySelector('source') === null) {
      const source = document.createElement('source');
      source.src = '../assets/wh_video.mp4';
      source.type = 'video/mp4';
      video.appendChild(source);
    }

    // Wait for 5 milliseconds, then start showing the video
    setTimeout(() => {
      // Start playing (if not already)
    //   video.play().catch((e) => {
    //     // autoplay might be blocked on some browsers
    //     console.warn("Autoplay failed:", e);
    //   });

      // Remove the overlay image after the video is ready
      video.addEventListener('canplay', () => {
        video.classList.remove('opacity-0');
		if(overlay){
			overlay.classList.add('opacity-0'); // fade out overlay
			setTimeout(() => {
			overlay.style.display = 'none'; // hide after transition
			}, 300); // match the CSS duration
		}
        
      });
    }, 5); // 5 milliseconds delay
  }
});
</script>
